generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Invitation {
  id        String   @id @default(uuid())
  email     String   @unique
  token     String   @unique
  createdAt DateTime @default(now())
  used      Boolean  @default(false)
}

enum Role {
  USER
  EDITOR
  SUPERADMIN
}

model Cargo {
  id                 String   @id @default(uuid())
  cargoNumber        String   @unique
  date               DateTime
  transportationInfo String
  payoutAmount       Decimal
  payoutTerms        String
  createdAt          DateTime @default(now())

  truckId String
  truck   Truck  @relation(fields: [truckId], references: [id])

  cargoPhoto CargoPhoto?
}

model Truck {
  id        String   @id @default(uuid())
  name      String   @unique
  cargos    Cargo[]
  createdAt DateTime @default(now())
}

model CargoPhoto {
  id        String   @id @default(uuid())
  url       String   @unique // URL изображения
  cargo     Cargo    @relation(fields: [cargoId], references: [id], onDelete: Cascade)
  cargoId   String   @unique
  createdAt DateTime @default(now())
}
